<h1>Imbibe a Drink And Relax!</h1>

<div class="fresh">
  <h3>Fresh Drinks</h3>
  <ul>
  {{#each drinks}}
  	<li>
  	   <p>ID: {{id}}</p>
       <p>DRINK: {{drink}}</p>
       <p>IMBIBED: {{imbibed}}</p>
  	</li>
  {{/each}}
</ul>
</div>


<div class="imbibed">
  <h3>Devoured Burger</h3>
  <ul>
  {{#each drinks}}
  	<li>
  	   <p>ID: {{id}}</p>
       <p>DRINK: {{drink}}</p>
       <p>IMBIBED: {{imbibed}}</p>
  	</li>
  {{/each}}
</ul>
</div>

<div class="addDrink">
  <form action="/" method="POST">
    <textarea type="text" name="drink"></textarea>
    <br>
    <button type="submit">SUBMIT</button>
  </form>
</div>
