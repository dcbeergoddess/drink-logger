<h1>IMBIBE AND RELAX!</h1>

<div class="fresh">
  <h3>Fresh Drinks</h3>
  <ul>
  {{#each orderedDrink}}
  	<li>
       <p>ON DECK: {{drink}}</p>
  	</li>
  {{/each}}
</ul>
</div>


<div class="imbibed">
  <h3>Drank</h3>
  <ul>
    {{#each imbibedDrink}}
    <li>
      <p>ALL GONE: {{drink}}</p>
    </li>
     {{/each}}
  </ul>
</div>

<div class="addDrink">
  <form action="/" method="POST">
    <textarea type="text" name="drink"></textarea>
    <br>
    <button type="submit">ORDER A DRINK!</button>
  </form>
</div>
